{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext", "es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "sourceMap": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "react",
    "rootDir": "src",
    "moduleResolution": "node",
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
